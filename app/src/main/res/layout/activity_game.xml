<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bigapp"
    tools:context=".Game.GameActivity">

    <TextView
        android:id="@+id/gameTitle"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word Battels!" />

    <TextView
        android:background="@drawable/bgquestion"
        android:id="@+id/info"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="6dp"
        android:padding="10dp"
        android:text="Guess Animals in English Language"
        android:textAlignment="center"
        android:textColor="#242E3B"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/word"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgpurple"
        android:text="Word To Find!"
        android:lineSpacingExtra="6dp"
        android:textColor="#242E3B"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/wordEntered"
        android:padding="20dp"
        android:textColor="#242E3B"
        android:textSize="22sp"
        android:lineSpacingExtra="6dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgpurple"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:textStyle="bold"
        android:inputType="textCapCharacters"/>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/checkB"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/bgbtn"
            android:text="Validate"/>
        <Button
            android:id="@+id/newB"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bgbtn"
            android:text="New"/>

    </LinearLayout>

</LinearLayout>